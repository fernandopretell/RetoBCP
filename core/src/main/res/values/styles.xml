<resources>


    <style name="core.TextLabel" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/core.white_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/core.white_color</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/core.white_color</item>
        <item name="colorControlNormal">@color/core.white_color</item>
        <item name="colorControlActivated">@color/core.white_color</item>
    </style>

    <style name="core.TextView.white.28sp" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">28sp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:textColor">@color/core.white_color</item>
    </style>

</resources>